<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_BottomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="底部弹出Dialog" />

    <Button
        android:id="@+id/btn_ConfimDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ConfimDialog" />

    <Button
        android:id="@+id/btn_EditDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EditDialog" />

    <Button
        android:id="@+id/btn_LoginDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LoginDialog" />

    <Button
        android:id="@+id/btn_StepDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StepDialog" />

</LinearLayout>
